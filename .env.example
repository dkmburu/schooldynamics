# SchoolDynamics Environment Configuration
# Copy this file to .env and configure for your environment
# NEVER commit .env to version control

# Application
APP_NAME="SchoolDynamics SIMS"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://schooldynamics.local
APP_TIMEZONE=Africa/Nairobi

# Security
SECURE_KEY=your-secure-key-here-change-this-in-production
SESSION_LIFETIME=7200
CSRF_TOKEN_NAME=_csrf_token

# Router Database (Central tenant resolver)
ROUTER_DB_HOST=localhost
ROUTER_DB_PORT=3306
ROUTER_DB_NAME=sims_router
ROUTER_DB_USER=root
ROUTER_DB_PASS=

# Database defaults (for tenant DBs)
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# File Storage
STORAGE_PATH=C:/wamp64_3.3.7/www/schooldynamics/storage
UPLOAD_PATH=C:/wamp64_3.3.7/www/schooldynamics/storage/uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Email (SMTP) - Default for system emails
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@schooldynamics.local
MAIL_FROM_NAME="${APP_NAME}"

# SMS Gateway - Default
SMS_PROVIDER=africastalking
SMS_API_KEY=
SMS_USERNAME=
SMS_SENDER_ID=SchoolDyn
SMS_DRY_RUN=true

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=sims_

# Session
SESSION_DRIVER=file
SESSION_COOKIE_NAME=sims_session
SESSION_SECURE_COOKIE=false

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=daily
LOG_MAX_FILES=14

# Pagination
PAGINATION_PER_PAGE=50

# Date & Time formats
DATE_FORMAT=Y-m-d
DATETIME_FORMAT=Y-m-d H:i:s
DISPLAY_DATE_FORMAT=d M Y
DISPLAY_DATETIME_FORMAT=d M Y H:i

# Audit & Security
AUDIT_ENABLED=true
FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Background Jobs
JOB_QUEUE_ENABLED=true
JOB_MAX_RETRIES=3
